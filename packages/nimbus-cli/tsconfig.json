{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/deploy.ts"]
}
